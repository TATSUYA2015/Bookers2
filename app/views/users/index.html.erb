<div class="container">
  <div class="row">
      <%= render'books/book', book: @book, user: @user %>

    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <tr>
            <td><%= image_tag @user.get_profile_image(100,100) %></td>
            <td><%= @user.name %></td>
            <td><%= link_to "Show", user_path(current_user.id) %></td>
          </tr>
        </tbody>

      </table>
    </div>
  </div>
</div>