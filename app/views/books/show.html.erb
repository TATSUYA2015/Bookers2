<div class="container px-5 px-sm-0">
 <div class="row">
      <%= render'book', book: @book_new, user: @user %>
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
         <tbody>
          <tr>
           <td><%= image_tag @user.get_profile_image(100,100) %></td>
           <td><%= @book.title %></td>
           <td><%= @book.body %></td>
           <td><%= link_to "Edit", edit_book_path, {class: "btn btn-sm btn-success edit_book_39065"}%></td>
           <td><%= link_to "Destroy", destroy_book_path(@book.id), class: "btn btn-sm btn-danger destroy_book_39095", method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
          </tr>
         </tbody>
        </table>
      </div>
 </div>
</div>

